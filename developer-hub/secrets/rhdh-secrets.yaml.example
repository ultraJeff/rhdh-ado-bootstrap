# RHDH Backend and GitHub Integration Secrets
#
# To use:
# 1. Copy this file to rhdh-secrets.yaml (it's gitignored)
# 2. Fill in your configuration (base64 encoded values)
# 3. Apply with: oc apply -f rhdh-secrets.yaml
#
# To base64 encode: echo -n "your-value" | base64
# To base64 encode a file: cat your-file.pem | base64 -w 0
apiVersion: v1
kind: Secret
metadata:
  name: my-rhdh-secrets
  namespace: rhdh
type: Opaque
data:
  # Backend configuration
  BACKEND_SECRET: <base64-encoded-random-string>          # Random string for session encryption
  BACKEND_URL: <base64-encoded-backend-url>               # e.g., https://backstage-developer-hub-rhdh.apps.your-cluster.domain

  # GitHub App Integration
  GITHUB_INTEGRATION_APP_ID: <base64-encoded-app-id>
  GITHUB_INTEGRATION_CLIENT_ID: <base64-encoded-client-id>
  GITHUB_INTEGRATION_CLIENT_SECRET: <base64-encoded-client-secret>
  GITHUB_INTEGRATION_HOST_DOMAIN: <base64-encoded-domain> # e.g., github.com
  GITHUB_INTEGRATION_ORGANIZATION: <base64-encoded-org>   # Your GitHub org name
  GITHUB_INTEGRATION_PRIVATE_KEY_FILE: <base64-encoded-private-key-pem>

  # TLS configuration
  NODE_TLS_REJECT_UNAUTHORIZED: MA==                      # "0" to disable TLS verification (dev only)
